<h1>Users#index</h1>

     <h2>User info</h2>
       <% if user.image.attached? %>
       <%= image_tag user.image, size: "100x100" %>
       <% else %>
       <%= image_tag 'no_image', size: "100x100" %>
       <% end %>
     <div>name</div>

     <div>introduction</div>
    
       <%= link_to "edit", edit_user_path(id: current_user) %>


     <h2>New book</h2>

       <%= form_with model: @book do |f| %>
     <h4>Title</h4>
       <%= f.text_field:title %>

     <h4>Opinion</h4>
       <%= f.text_area:body %>

       <%= f.submit'Create Book' %>
       <% end %>
